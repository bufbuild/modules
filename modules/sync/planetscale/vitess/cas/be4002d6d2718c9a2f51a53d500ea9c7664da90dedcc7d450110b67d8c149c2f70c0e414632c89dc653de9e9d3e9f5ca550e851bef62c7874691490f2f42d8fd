// Service definition for vtgateservice.
// This is the main entry point to Vitess.

syntax = "proto3";
option go_package = "github.com/planetscale/vitess-types/gen/vitess/vtgateservice/v17;vtgateservicev17";

// option java_package="io.vitess.proto.grpc";

package vitess.vtgateservice.v17;

import "vitess/vtgate/v17/vtgate.proto";

// Vitess is the main service to access a Vitess cluster. It is the API that vtgate
// exposes to serve all queries.
service Vitess {
  // Execute tries to route the query to the right shard.
  // It depends on the query and bind variables to provide enough
  // information in conjunction with the vindexes to route the query.
  // API group: v3
  rpc Execute(vitess.vtgate.v17.ExecuteRequest) returns (vitess.vtgate.v17.ExecuteResponse) {};

  // ExecuteBatch tries to route the list of queries on the right shards.
  // It depends on the query and bind variables to provide enough
  // information in conjunction with the vindexes to route the query.
  // API group: v3
  rpc ExecuteBatch(vitess.vtgate.v17.ExecuteBatchRequest) returns (vitess.vtgate.v17.ExecuteBatchResponse) {};

  // StreamExecute executes a streaming query based on shards.
  // It depends on the query and bind variables to provide enough
  // information in conjunction with the vindexes to route the query.
  // Use this method if the query returns a large number of rows.
  // API group: v3
  rpc StreamExecute(vitess.vtgate.v17.StreamExecuteRequest) returns (stream vitess.vtgate.v17.StreamExecuteResponse) {};

  // ResolveTransaction resolves a transaction.
  // API group: Transactions
  rpc ResolveTransaction(vitess.vtgate.v17.ResolveTransactionRequest) returns (vitess.vtgate.v17.ResolveTransactionResponse) {};

  // VStream streams binlog events from the requested sources.
  rpc VStream(vitess.vtgate.v17.VStreamRequest) returns (stream vitess.vtgate.v17.VStreamResponse) {};

  // Prepare is used by the MySQL server plugin as part of supporting prepared statements.
  rpc Prepare(vitess.vtgate.v17.PrepareRequest) returns (vitess.vtgate.v17.PrepareResponse) {};

  // CloseSession closes the session, rolling back any implicit transactions.
  // This has the same effect as if a "rollback" statement was executed,
  // but does not affect the query statistics.
  rpc CloseSession(vitess.vtgate.v17.CloseSessionRequest) returns (vitess.vtgate.v17.CloseSessionResponse) {};
}

// gRPC RPC interface for the internal resharding throttler (go/vt/throttler)
// which is used by vreplication.

syntax = "proto3";
option go_package = "github.com/planetscale/vitess-types/gen/vitess/throttlerservice/dev;throttlerservicedev";

package vitess.throttlerservice.dev;

import "vitess/throttlerdata/dev/throttlerdata.proto";

// Throttler defines the throttler RPC calls.
service Throttler {
  // MaxRates returns the current max rate for each throttler of the process.
  rpc MaxRates (vitess.throttlerdata.dev.MaxRatesRequest) returns (vitess.throttlerdata.dev.MaxRatesResponse) {};

  // SetMaxRate allows to change the current max rate for all throttlers
  // of the process.
  rpc SetMaxRate (vitess.throttlerdata.dev.SetMaxRateRequest) returns (vitess.throttlerdata.dev.SetMaxRateResponse) {};

  // GetConfiguration returns the configuration of the MaxReplicationlag module
  // for the given throttler or all throttlers if "throttler_name" is empty.
  rpc GetConfiguration (vitess.throttlerdata.dev.GetConfigurationRequest) returns (vitess.throttlerdata.dev.GetConfigurationResponse) {};

  // UpdateConfiguration (partially) updates the configuration of the
  // MaxReplicationlag module for the given throttler or all throttlers if
  // "throttler_name" is empty.
  // If "copy_zero_values" is true, fields with zero values will be copied
  // as well.
  rpc UpdateConfiguration (vitess.throttlerdata.dev.UpdateConfigurationRequest) returns (vitess.throttlerdata.dev.UpdateConfigurationResponse) {};

  // ResetConfiguration resets the configuration of the MaxReplicationlag module
  // to the initial configuration for the given throttler or all throttlers if
  // "throttler_name" is empty.
  rpc ResetConfiguration (vitess.throttlerdata.dev.ResetConfigurationRequest) returns (vitess.throttlerdata.dev.ResetConfigurationResponse) {};
}
